#include <stdio.h>

void linear(int a[], int n, int key)
{
int i, flag = 0;
for (i = 0; i < n; i++)
{
if (a[i] == key)
{
flag = 1; break;
}
}

if (flag == 1)
printf("\nKey found at position %d\n", i + 1); else
printf("\nKey not found\n");
}

int main()
{
int a[10], n, key, i;

printf("Enter number of elements: "); scanf("%d", &n);

printf("Enter elements: "); for (i = 0; i < n; i++)
scanf("%d", &a[i]);

printf("Enter key to search: "); scanf("%d", &key);

linear(a, n, key);

return 0;
}
