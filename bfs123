#include <stdio.h>

int n;
int adj[10][10];
int visited[10];
int queue[10];
int front = -1, rear = -1;

// Enqueue function
void enqueue(int i) {
    if (rear == 9) {
        printf("Queue is full\n");
    } else {
        if (front == -1) front = 0;
        rear++;
        queue[rear] = i;
    }
}

// Dequeue function
int dequeue() {
    if (front == -1 || front > rear) {
        printf("Queue is empty\n");
        return -1;
    } else {
        int temp = queue[front];
        front++;
        return temp;
    }
}

// BFS traversal function
void BFS(int s) {
    int i, j;
    for (i = 0; i < n; i++) visited[i] = 0;

    enqueue(s);
    visited[s] = 1;
    printf("BFS Traversal starting from building %d: %d ", s, s);

    while (front <= rear) {
        i = dequeue();
        for (j = 0; j < n; j++) {
            if (visited[j] == 0 && adj[i][j] == 1) {
                enqueue(j);
                printf("%d ", j);
                visited[j] = 1;
            }
        }
    }
    printf("\n");
}

// Print adjacency matrix
void printMatrix() {
    int i, j;
    printf("Adjacency Matrix:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            printf("%d ", adj[i][j]);
        }
        printf("\n");
    }
}

int main() {
    int i, j, s;

    printf("Enter the total number of buildings (max 10): ");
    scanf("%d", &n);

    // Initialize adjacency matrix to 0
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++)
            adj[i][j] = 0;

    printf("Enter the adjacency matrix (enter 1 if there is a connection, else 0):\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &adj[i][j]);
        }
    }

    printMatrix();

    printf("Enter the starting building (0 to %d): ", n-1);
    scanf("%d", &s);

    BFS(s);

    return 0;
}





